<?xml version="1.0" encoding="UTF-8"?>

<!-- Style/Transform XML document using a XSL file -->
<?xml-stylesheet type="text/xsl" href="xsl/newlog.xsl"?>

<!-- XML namespaces for log and XSI -->
<addlog 
	xmlns="http://www.wsd.com/log" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<input>
		<name>startdate</name>
		<type>date</type>
		<placeholder>startdate</placeholder>
	</input>
	
	<input>
		<name>enddate</name>
		<type>date</type>
		<placeholder>enddate</placeholder>
	</input>
	
	<input>
		<name>starttime</name>
		<type>time</type>
		<placeholder>starttime</placeholder>
	</input>
	
	<input>
		<name>endtime</name>
		<type>time</type>
		<placeholder>endtime</placeholder>
	</input>
	
	<input>
		<name>description</name>
		<type>text</type>
		<placeholder>description</placeholder>
	</input>
	
	<input>
		<name>kilometres</name>
		<type>number</type>
		<placeholder>kilometres</placeholder>
	</input>
	
	<input>
		<name>driver</name>
		<type>text</type>
		<placeholder>driver</placeholder>
	</input>
	
	<input>
		<name></name>
		<type>submit</type>
		<placeholder></placeholder>
	</input>
	
</addlog>