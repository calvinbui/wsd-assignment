<?xml version="1.0" encoding="UTF-8"?>

<logform>

	<title>Add New Log</title>

	<addlog method="POST" action="create_log_submit.jsp">
		<option>
			<label>Vehicle</label>
			<input type="text" name="vehicle">Vehicle</input>
		</option>
		<option>
			<label>Driver</label>
			<input type="text" name="driver">Driver</input>
		</option>
		<option>
			<label>Start Date</label>
			<input type="date" id="start_date" name="startdate">Start Date</input>
		</option>
		<option>
			<label>End Date</label>
			<input type="date" id="end_date" name="enddate">End Date</input>
		</option>
		<option>
			<label>Start Time</label>
			<input type="time" name="starttime">Start Time</input>
		</option>
		<option>
			<label>End Time</label>
			<input type="time" name="endtime">End Time</input>
		</option>
		<option>
			<label>Description</label>
			<input type="text" name="description">Description</input>
		</option>
		<option>
			<label>Kilometres</label>
			<input type="number" name="kilometres">Kilometres</input>
		</option>
	</addlog>

</logform>
