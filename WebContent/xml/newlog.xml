<?xml version="1.0" encoding="UTF-8"?>

<logform>

	<title>Add New Log</title>

	<addlog class="form-horizontal">
		<option>
			<label for="vehicle">Vehicle</label>
			<input type="text" id="vehicle" placeholder="Vehicle registration" />
		</option>
		<option>
			<label for="driver">Driver</label>
			<input type="text" id="driver" placeholder="Driver" />
		</option>
		<option>
			<label for="startdate">Start Date</label>
			<input type="date" id="startdate" placeholder="Start Date" />
		</option>
		<option>
			<label for="enddate">End Date</label>
			<input type="date" id="enddate" placeholder="End Date" />
		</option>
		<option>
			<label for="starttime">Start Time</label>
			<input type="time" id="starttime" placeholder="Start Time" />
		</option>
		<option>
			<label for="endtime">End Time</label>
			<input type="time" id="endtime" placeholder="End Time" />
		</option>
		<option>
			<label for="description">Description</label>
			<input type="number" id="description" placeholder="Description" />
		</option>
		<option>
			<label for="kilometres">Kilometres</label>
			<input type="number" id="kilometres" placeholder="Kilometres travelled" />
		</option>
	</addlog>

</logform>