<?xml version="1.0" encoding="UTF-8"?>

<logform>

	<title>Add New Log</title>

	<addlog class="form-horizontal">
		<option class="form-group">
			<label for="vehicle" class="control-label col-xs-2">Vehicle</label>
			<input type="text" class="form-control" id="vehicle"
				placeholder="Vehicle registration" />
		</option>
		<option class="form-group">
			<label for="driver" class="control-label col-xs-2">Driver</label>
			<input type="text" class="form-control" id="driver"
				placeholder="Driver" />
		</option>
		<option class="form-group">
			<label for="startdate" class="control-label col-xs-2">Start Date</label>
			<input type="date" class="form-control" id="startdate"
				placeholder="Start Date" />
		</option>
		<option class="form-group">
			<label for="enddate" class="control-label col-xs-2">End Date</label>
			<input type="date" class="form-control" id="enddate"
				placeholder="End Date" />
		</option>
		<option class="form-group">
			<label for="starttime" class="control-label col-xs-2">Start Time</label>
			<input type="time" class="form-control" id="starttime"
				placeholder="Start Time" />
		</option>
		<option class="form-group">
			<label for="endtime" class="control-label col-xs-2">End Time</label>
			<input type="time" class="form-control" id="endtime"
				placeholder="End Time" />
		</option>
		<option class="form-group">
			<label for="description" class="control-label col-xs-2">Description</label>
			<input type="number" class="form-control" id="description"
				placeholder="Description" />
		</option>
		<option class="form-group">
			<label for="kilometres" class="control-label col-xs-2">Kilometres</label>
			<input type="number" class="form-control" id="kilometres"
				placeholder="Kilometres travelled" />
		</option>
	</addlog>

</logform>