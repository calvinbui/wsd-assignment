<?xml version="1.0" encoding="UTF-8"?>

<vehicleform>

	<title>Add New Vehicle</title>

	<addvehicle method="POST" action="create_vehicle_submit.jsp">
		<option>
			<label for="registration">Registration</label>
			<input type="text" id="registration" placeholder="Vehicle registration" />
		</option>
		<option>
			<label for="type">Type</label>
			<input type="select" id="type" placeholder="Vehicle type">
				<select name="Car">Car</select>
				<select name="Ute">Ute</select>
				<select name="Minibus">Minibus</select>
			</input>
		</option>
		<option>
			<label for="make">Make</label>
			<input type="text" id="make" placeholder="Vehicle make" />
		</option>
		<option>
			<label for="model">Model</label>
			<input type="text" id="model" placeholder="Vehicle model" />
		</option>
		<option>
			<label for="year">Year</label>
			<input type="number" id="year" placeholder="Vehicle year" />
		</option>
		<option>
			<label for="colour">Colour</label>
			<input type="text" id="colour" placeholder="Vehicle colour" />
		</option>
		<option>
			<label for="kilometres">Kilometres</label>
			<input type="number" id="kilometres" placeholder="Kilometres travelled" />
		</option>
	</addvehicle>

</vehicleform>